<Window x:Class="M7CarClientWpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M7CarClientWpf"
        mc:Ignorable="d"
        Title="LoginWindow" Height="376" Width="800">
    <StackPanel>
        <Label Background="LightGoldenrodYellow" Padding="10">Username</Label>
        <TextBox x:Name="tb_username" Padding="10"/>
        <Label Background="LightGoldenrodYellow" Padding="10">Password</Label>
        <PasswordBox x:Name="tb_password" Padding="10"/>
        <Button Content="Login" Padding="10" Margin="10" Click="Button_Click" />
        <Button Content="Sign up" Height="40" Padding="10" Width="300" Background="LightBlue" Margin="10" Click="Button_Click_1" />
        <Image Source="SocialLoginWindows/Buttons/facebook.png" Height="50" Margin="10" MouseLeftButtonDown="LoginWithFb" />
        </StackPanel>
</Window>
