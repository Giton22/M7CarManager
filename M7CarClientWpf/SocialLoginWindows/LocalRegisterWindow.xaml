<Window x:Class="WpfSocialLogin.LocalRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSocialLogin"
        mc:Ignorable="d"
        Title="LocalRegisterWindow" Height="537" Width="800">
    <StackPanel>
        <Label Background="LightGoldenrodYellow" Padding="10">First name</Label>
        <TextBox x:Name="tb_firstname" Padding="10"/>
        <Label Background="LightGoldenrodYellow" Padding="10">Last name</Label>
        <TextBox x:Name="tb_lastname" Padding="10"/>
        <Label Background="LightGoldenrodYellow" Padding="10">Username</Label>
        <TextBox x:Name="tb_username" Padding="10"/>
        <Label Background="LightGoldenrodYellow" Padding="10">Email</Label>
        <TextBox x:Name="tb_email" Padding="10"/>
        <Label Background="LightGoldenrodYellow" Padding="10">Password</Label>
        <TextBox x:Name="tb_password" Padding="10"/>
        <Label Background="LightGoldenrodYellow" Padding="10">Password, again</Label>
        <TextBox x:Name="tb_password2" Padding="10"/>
        <Button Content="Register" Padding="10" Margin="10" Click="Button_Click" />
    </StackPanel>
</Window>
