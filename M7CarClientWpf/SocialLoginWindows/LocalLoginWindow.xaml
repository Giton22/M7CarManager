<Window x:Class="WpfSocialLogin.LocalLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSocialLogin"
        mc:Ignorable="d"
        Title="LocalLoginWindow" Height="237" Width="800">
    <StackPanel>
        <Label Background="LightGoldenrodYellow" Padding="10">Username</Label>
        <TextBox x:Name="tb_username" Padding="10"/>
        <Label Background="LightGoldenrodYellow" Padding="10">Password</Label>
        <TextBox x:Name="tb_password" Padding="10"/>
        <Button Content="Login" Padding="10" Margin="10" Click="Button_Click" />
    </StackPanel>
</Window>
